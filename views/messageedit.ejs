<div class="container">
<div class="row justify-content">
  <div class="col-xl-12 col-lg-12" style="margin-top: 10%;">
 
  <h1><%= title %></h1>
  <form action="/update" method="post">
    <input type="hidden" value="<%= form.id %>" name="id">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" class="form-control" id="text" placeholder="Enter Name" value="<%= form.sname %>" name="sname" required>

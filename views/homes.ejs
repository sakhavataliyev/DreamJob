<div class="container-fluid p-5;" style="margin-top:10%; ">
	<div class="row">
	
        <div class="col-sm-5 rounded py-3">
			  <div id="loginbox" style="width: 80%;padding: 5%;border-radius: 30%;background-color: #ffd525;margin: 4%;">
				 <div class="form-group">
           <div align ="center">
				 <h1 style="font-family: cursive;">Log in</h1>
         </div>
				   <form action="/" method="POST">
					 <label for="usr" style="font-family: cursive;" >User:</label>
							<input  style="margin-bottom:3%;font-family: cursive;" type="email" name="email" id="_email" class="form-control" placeholder="email" required>
							<input style="margin-bottom:3%;font-family: cursive;" type="password" name="password" id="_pass" class="form-control" placeholder="Password" required>
									<% if (locals.login_errors) { 
									  login_errors.forEach(function(error_msg){ %>
									  <div class="alert alert-danger" role="alert"><%= error_msg %></div>
									<% });
									} %>	  
					  <div class="form-group">
					   <button type="submit" class="btn btn-block" style="color: #201b05;background-color: #ffffff;border-color: #f8fcff;border-radius: 25%;padding: 2%;box-shadow: 10px 10px 5px #757474;margin-bottom: 10%;">Log in</button>
					 </div>
				  </form>
				 </div>
			 </div>
		</div>
		
		
		 <div class="col-sm-6 py-3 offset-sm-1">
		 
			<div id="loginbox" style="width: 80%;padding: 5%;border-radius: 30%;background-color: #ffd525;margin: 4%;">
				<div class="form-group">
          <div align="center">
				 <h1 style="font-family: cursive;">Form</h1>
        </div>
				   <form action="/addform" method="POST">
					 <label for="usr" style="font-family: cursive;" >form:</label>
					 <input style="margin-bottom:3%;font-family: cursive;" type="text" name="sname" id="_rname" class="form-control" placeholder="Name" value="<%= (locals.old_data) ? old_data.user_name : ''; %>" required>
           <input style="margin-bottom:3%;font-family: cursive;" type="text" name="surname" id="_rsurname" class="form-control" placeholder="Surname" value="<%= (locals.old_data) ? old_data.surname : ''; %>" required>
           <input style="margin-bottom:3%;font-family: cursive;" type="text" name="city" id="_rcity" class="form-control" placeholder="City" value="<%= (locals.old_data) ? old_data.city : ''; %>" required>
           <input style="margin-bottom:3%;font-family: cursive;" type="text" name="about" id="_rabout" class="form-control" placeholder="About" value="<%= (locals.old_data) ? old_data.about : ''; %>" required>
					 <input  style="margin-bottom:3%;font-family: cursive;" type="email" name="email" id="_remail" class="form-control" placeholder="Email" value="<%= (locals.old_data) ? old_data.user_email : ''; %>" required>
					 <input style="margin-bottom:3%;font-family: cursive;" type="password" name="password" id="_rpass" class="form-control" placeholder="Password" required>
										<% if (locals.addform_error) { 
										  addform_error.forEach(function(error_msg){ %>
										  <div class="alert alert-danger" role="alert"><%= error_msg %></div>
										<% });
										} %>            
					 <div class="form-group">
					   <button type="submit" class="btn btn-block" style="color: #201b05;background-color: #ffffff;border-color: #f8fcff;border-radius: 25%;padding: 2%;box-shadow: 10px 10px 5px #757474;margin-bottom: 10%;">Sign Up</button>
					 </div>
					 
				  </form>
				</div>
			</div>
		 
		 
		 </div>
</div>


